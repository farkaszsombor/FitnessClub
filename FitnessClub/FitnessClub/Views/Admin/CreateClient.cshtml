            @Html.ValidationMessageFor(model => model.IdentityNumber, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-1">
            @Html.Label("Male", htmlAttributes: new { @class = "control-label col-md-1" })
        </div>
        <div class="col-md-1">
            @Html.RadioButtonFor(model =>model.Sex,"Male")
            @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-1">
            @Html.Label("Female", htmlAttributes: new { @class = "control-label col-md-1" })
        </div>
        <div class="col-md-1">
            @Html.RadioButtonFor(model => model.Sex, "Female")
            @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
